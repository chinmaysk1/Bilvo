generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BillSource {
  GMAIL
  MANUAL
  UTILITY
}

enum BillStatus {
  SCHEDULED
  PENDING
  PAID
  FAILED
  CANCELED
}

model User {
  id                     String            @id @default(cuid())
  name                   String?
  email                  String?           @unique
  emailVerified          DateTime?
  image                  String?
  householdId            String?
  hasCompletedOnboarding Boolean           @default(false)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  autopayEnabled         Boolean?          @default(false)
  accounts               Account[]
  activities             Activity[]
  createdBills           Bill[]            @relation("BillCreator")
  ownedBills             Bill[]            @relation("BillOwner")
  billParticipants       BillParticipant[]
  adminHouseholds        Household[]       @relation("HouseholdAdmin")
  createdHouseholds      Household[]       @relation("HouseholdCreator")
  paymentMethods         PaymentMethod[]
  sessions               Session[]
  household              Household?        @relation(fields: [householdId], references: [id])
  utilityAccounts        UtilityAccount[]
}

model Household {
  id         String     @id @default(cuid())
  name       String
  address    String
  inviteCode String     @unique @default(cuid())
  creatorId  String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  adminId    String
  activities Activity[]
  bills      Bill[]
  admin      User       @relation("HouseholdAdmin", fields: [adminId], references: [id], onDelete: SetNull)
  creator    User       @relation("HouseholdCreator", fields: [creatorId], references: [id])
  members    User[]
  utilityAccounts UtilityAccount[]

  @@index([inviteCode])
}

model UtilityAccount {
  id                String   @id @default(cuid())
  householdId       String
  ownerUserId       String?

  // UI fields
  type              String
  provider          String
  providerWebsite   String?
  accountHolderName String?
  loginEmail        String?
  accountNumber     String?

  // Credentials for Playwright login â€” encrypted at rest
  encryptedPassword String?   // AES-256 encrypted
  passwordIv        String?   // IV used to encrypt/decrypt

  // Sync state
  isLinked          Boolean   @default(false)
  externalAccountId String?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  household         Household @relation(fields: [householdId], references: [id])
  owner             User?     @relation(fields: [ownerUserId], references: [id])
  bills             Bill[]

  @@index([householdId])
  @@index([ownerUserId])
  @@index([type, provider])
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  refresh_token_expires_in Int?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Bill {
  id              String            @id @default(cuid())
  householdId     String
  ownerUserId     String
  createdByUserId String
  source          BillSource
  externalId      String?

  // link to a utility account when applicable
  utilityAccountId String?
  utilityAccount   UtilityAccount?   @relation(fields: [utilityAccountId], references: [id])

  biller          String
  billerType      String
  amount          Float?
  dueDate         DateTime
  scheduledCharge DateTime?
  status          BillStatus        @default(SCHEDULED)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  createdBy       User              @relation("BillCreator", fields: [createdByUserId], references: [id])
  household       Household         @relation(fields: [householdId], references: [id])
  owner           User              @relation("BillOwner", fields: [ownerUserId], references: [id])
  participants    BillParticipant[]

  @@index([householdId, source, externalId])
  @@index([ownerUserId])
  @@index([createdByUserId])
  @@index([utilityAccountId]) 
  @@index([householdId, dueDate])
}

model BillParticipant {
  id               String         @id @default(cuid())
  billId           String
  userId           String
  shareAmount      Float          @default(0)
  autopayEnabled   Boolean        @default(false)
  paymentMethodId  String?
  capAmount        Float?
  nextChargeAt     DateTime?
  notifyBeforeDays Int?           @default(2)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  bill             Bill           @relation(fields: [billId], references: [id], onDelete: Cascade)
  paymentMethod    PaymentMethod? @relation("ParticipantPaymentMethod", fields: [paymentMethodId], references: [id])
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([billId, userId])
  @@index([userId])
  @@index([billId, autopayEnabled])
}

model Activity {
  id          String    @id @default(cuid())
  householdId String
  userId      String?
  type        String
  description String
  detail      String?
  amount      Float?
  source      String?
  timestamp   DateTime  @default(now())
  household   Household @relation(fields: [householdId], references: [id])
  user        User?     @relation(fields: [userId], references: [id])

  @@index([householdId, timestamp])
}

model PaymentMethod {
  id               String            @id @default(cuid())
  userId           String
  type             String
  last4            String
  brand            String?
  isDefault        Boolean           @default(false)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  billParticipants BillParticipant[] @relation("ParticipantPaymentMethod")
  user             User              @relation(fields: [userId], references: [id])

  @@index([userId])
}
